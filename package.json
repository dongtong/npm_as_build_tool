{
  "name": "npm_as_build_tool",
  "version": "1.0.0",
  "description": "Use npm package as building tool in node application",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint",
    "test": "mocha test -u bdd -R spec",
    "posttest": "echo 'after test is running...'",
    "start": "node index.js",
    "stop": "echo \"Stop app...\"",
    "restart": "echo \"Restart app...\"",
    "start:dev": "node index.js 4000",
    "pregreet": "echo 'Before greet'",
    "greet": "echo 'Hello foobar'",
    "postgreet": "echo 'After greet'",
    "lint": "jshint --exclude ./lib/*.js *.js **/*.js",
    "compile:es6": "babel ./src --out-dir ./lib"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "koa": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "jshint": "^2.9.2",
    "mocha": "^2.5.3",
    "should": "^9.0.0",
    "supertest": "^1.2.0"
  }
}
