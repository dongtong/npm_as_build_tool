{
  "name": "npm_as_build_tool",
  "version": "1.0.6",
  "description": "Use npm package as building tool in node application",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run compile && npm run lint",
    "test": "mocha test -u bdd -R spec",
    "posttest": "echo 'after test is running...'",
    "watch:test": "npm run test -- -w -R min",
    "start": "node index.js",
    "stop": "echo \"Stop app...\"",
    "restart": "echo \"Restart app...\"",
    "start:dev": "node index.js 4000",
    "pregreet": "echo 'Before greet'",
    "greet": "echo 'Hello foobar'",
    "postgreet": "echo 'After greet'",
    "lint": "jshint --exclude ./lib/*.js *.js ./src/**/*.js",
    "watch:lint": "watch 'npm run lint' .",
    "clean": "rimraf lib/*",
    "precompile": "npm run clean",
    "compile": "babel ./src/js --out-dir ./lib",
    "compile:less": "lessc ./src/less/main.less ./public/css/main.css",
    "build:bundle": "browserify ./src/app.js | uglifyjs -mc > ./public/js/bundle.min.js",
    "build:clean": "rimraf public/css/* public/js/*",
    "prebuild": "npm run build:clean",
    "build": "npm run compile:less && npm run build:bundle",
    "watch:server": "nodemon --ignore src --ignore public index.js",
    "watch:bundle": "watchify ./src/app.js -o ./public/js/bundle.js -dv",
    "watch:bundle2": "watch 'npm run build:bundle' src",
    "browserSync": "npm run watch:bundle2 & browser-sync start --config bs-config.js",
    "version:major": "npm version major -f",
    "version:minor": "npm version minor -f",
    "version:patch": "npm version patch -f",
    "prepush:origin": "echo 'Push code to GitHub'",
    "push:origin": "git push --tags origin HEAD:master",
    "launch:prod": "open https://yourherokuurl.com",
    "launch:prod:windows": "start https://yourherokuurl.com",
    "push-to-cloud": "npm run push:origin",
    "deploy:prod": "npm run test:deploy -s && npm run build -s && npm run version:patch && npm run push-to-cloud",
    "deploy:prod:time": "time(npm run deploy:prod)",
    "deploy:prod:script": "bash ./deploy.sh",
    "test:deploy": "npm t -- -R dot"
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "~4.0.0",
    "npm": "~3.3.9"
  },
  "dependencies": {
    "koa": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "browser-sync": "^2.12.10",
    "browserify": "^13.0.1",
    "jshint": "^2.9.2",
    "less": "^2.7.1",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.2",
    "rimraf": "^2.5.2",
    "should": "^9.0.0",
    "supertest": "^1.2.0",
    "uglify-js": "^2.6.2",
    "watch": "^0.18.0",
    "watchify": "^3.7.0"
  }
}
